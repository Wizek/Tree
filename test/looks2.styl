@import "normalize"

$cl_red = #ff483c
$cl_green = #9dde8a
$cl_black = #201F1D
$panel_fg = $cl_black
$stamp_bg_fail = $cl_red
$stamp_bg_pass = $cl_green
$type_str = #667BEF
$type_num = $type_str

user-select(val)
  -webkit-user-select val
  -khtml-user-select val
  //-moz-user-select val
  -o-user-select val
  user-select val

